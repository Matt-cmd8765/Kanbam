<div style='border: solid'>
  <%= form_with(model: [card, card.comments.build]) do |f| %>
    <%= f.label 'New Comment '%>
    <%= f.text_area :comment %>
    <%= f.hidden_field :user_id, :value => current_user.id%>
    <%= f.hidden_field :card_id, :value => card.id%>
    <%= f.hidden_field :parent_id, :value => parent_id %>
    <%= f.submit 'Reply'%>
  <% end %>
</div>
