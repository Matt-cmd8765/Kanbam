<div class="border rounded p-3 mb-4 bg-dark text-white">
  <%= form_with(model: [card, card.comments.build], local: true) do |f| %>
    <div class="form-group">
      <%= f.label :comment, 'New Comment', class: 'form-label' %>
      <%= f.text_area :comment, class: 'form-control', rows: 3 %>
    </div>
    
    <%= f.hidden_field :user_id, value: current_user.id %>
    <%= f.hidden_field :card_id, value: card.id %>
    <%= f.hidden_field :parent_id, value: parent_id %>
    
    <%= f.submit 'Reply', class: 'btn btn-primary mt-2' %>
  <% end %>
</div>

